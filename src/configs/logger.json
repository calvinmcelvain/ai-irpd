{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "detailed": {
            "format": "%(asctime)s | %(levelname)s | %(name)s | %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "detailed",
            "stream": "ext://sys.stdout"
        },
        "app_file": {
            "class": "logging.FileHandler",
            "filename": "../logs/app.log",
            "level": "INFO",
            "formatter": "detailed",
            "encoding": "utf-8"
        },
        "debug_file": {
            "class": "logging.FileHandler",
            "filename": "../logs/debug.log",
            "level": "DEBUG",
            "formatter": "detailed",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "app": {
            "level": "DEBUG",
            "handlers": ["console", "app_file", "debug_file"],
            "propagate": false
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}
